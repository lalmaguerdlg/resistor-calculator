{
  "private": true,
  "name": "resistor-calculator",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "workspaces": [
    "server",
    "web"
  ],
  "scripts": {
    "prepare": "npm run prepare --prefix ./server",
    "dev": "concurrently \"npm run dev --prefix ./server \" \"npm run dev --prefix ./web \"",
    "db:migrate": "cd server && npx prisma migrate deploy",
    "build": "npm run build --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3",
    "typescript": "^5.3.3"
  }
}
